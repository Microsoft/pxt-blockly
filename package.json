{
  "name": "pxt-blockly",
  "version": "1.0.1",
  "description": "Blockly fork for Microsoft's Programming Experience Toolkit",
  "keywords": ["blockly", "pxt"],
  "scripts": {
    "lint": "jshint .",
    "watch": "node_modules/.bin/gulp watch",
    "prepublish": "node_modules/.bin/gulp build",
    "publish": "node_modules/.bin/gulp release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Microsoft/pxt-blockly.git"
  },
  "bugs": {
    "url": "https://github.com/Microsoft/pxt-blockly/issues"
  },
  "homepage": "https://github.com/Microsoft/pxt-blockly/",
  "author": {
    "name": "Microsoft"
  },
  "license": "MIT",
  "files": [
    "README.md",
    "blockly_compressed.js",
    "blocks_compressed.js",
    "media/**",
    "msg/**"
  ],
  "devDependencies": {
    "jshint": "latest",
    "gulp": "^3.9.1",
    "gulp-tsb": "^2.0.0",
    "gulp-bump": "^2.7.0",
    "merge-stream": "^1.0.0",
    "rimraf": "^2.5.4",
    "typescript": "2.1.5"
  },
  "jshintConfig": {
    "globalstrict": true,
    "predef": ["Blockly", "goog", "window", "document", "soy", "XMLHttpRequest"],
    "sub": true,
    "undef": true,
    "unused": true
  }
}
